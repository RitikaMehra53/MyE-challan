                        android:id="@+id/textViewDatePickerChallanDate"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif"
                        android:text="Offence Date: "
                        android:textSize="20dp"
                        android:textStyle="bold" />


                    <DatePicker
                        android:id="@+id/datePickerChallanDate"
                        android:layout_width="0dp"
                        android:layout_height="100sp"
                        android:layout_weight="2"
                        android:calendarViewShown="true"
                        android:clickable="true" />

                </android.support.v7.widget.LinearLayoutCompat>

                <android.support.v7.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_margin="5dp"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <TextView
                        android:id="@+id/textViewTimePickerChallanTime"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif"
                        android:text="Offence Time: "
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <TimePicker
                        android:id="@+id/timePickerChallanTime"
