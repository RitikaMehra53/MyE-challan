            android:textColor="#ffffff"
            android:textSize="12sp"
            android:textStyle="bold"/>-->
    </TableRow>

    <TableRow xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/tableRowFetch"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#097aca">

        <TextView
            android:id="@+id/textViewFetchChallanNo"
            android:layout_width="40sp"
            android:layout_height="wrap_content"
            android:layout_margin="5sp"
            android:textSize="12sp"
            android:textColor="#ffffff"
            android:text="Challan No"
            android:textStyle="bold"/>


        <TextView
            android:id="@+id/textViewFetchName"
            android:layout_width="40sp"
            android:textColor="#ffffff"
            android:layout_height="wrap_content"
            android:layout_margin="5sp"
            android:textSize="12sp"
            android:text="Name of Violator"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/textViewFetchLicenceNo"
            android:layout_width="40sp"
            android:textColor="#ffffff"
            android:layout_height="wrap_content"
            android:layout_margin="5sp"
            android:textSize="12sp"
            android:text="Licence No."
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/textViewFetchDate"
            android:layout_width="40sp"
            android:layout_height="wrap_content"
            android:layout_margin="5sp"
            android:textColor="#ffffff"
            android:textSize="12sp"
            android:text="Date"
            android:textStyle="bold"/>


        <TextView
            android:id="@+id/textViewFetchTime"
            android:layout_width="40sp"
            android:textColor="#ffffff"
            android:layout_height="wrap_content"
            android:layout_margin="5sp"
            android:textSize="12sp"
            android:text="Time"
            android:textStyle="bold"/>



        <TextView
            android:id="@+id/textViewFetchPlace"
            android:layout_width="40sp"
            android:textColor="#ffffff"
            android:layout_height="wrap_content"
            android:layout_margin="5sp"
            android:textSize="12sp"
            android:text="Place"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/textViewFetchDescription"
            android:layout_width="40sp"
            android:layout_height="wrap_content"
            android:layout_margin="5sp"
            android:text="Description"
            android:textSize="12sp"
             android:textColor="#ffffff"
            android:textStyle="bold"/>

