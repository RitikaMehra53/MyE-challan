<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16sp"
        android:background="#ffffff">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="80sp"
                        android:layout_height="80sp"
                        android:src="@drawable/hp"
                        android:layout_margin="20sp"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="HARYANA POLICE TRAFFIC E-CHALLAN SYSTEM"
                        android:layout_marginTop="20sp"
                        android:textAlignment="center"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#e90518"
                        android:fontFamily="sans-serif"/>
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:text="UPDATE CHALLAN AMOUNT"
                    android:textAlignment="center"
                    android:textColor="#1f1f6e"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:layout_marginTop="10sp"
                    android:layout_marginBottom="10sp"/>


                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="80sp"
                        android:layout_height="wrap_content"
                        android:text="Description"
                        android:layout_margin="10sp"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="60sp"
                        android:layout_height="wrap_content"
                        android:text="1st Fine"
                        android:layout_margin="10sp"
                        android:textSize="15sp"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="60sp"
                        android:layout_height="wrap_content"
                        android:text="2nd Fine"
                        android:layout_margin="10sp"
                        android:textSize="15sp"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="60sp"
                        android:layout_height="wrap_content"
                        android:text="3rd Fine"
                        android:layout_margin="10sp"
                        android:textSize="15sp"
                        android:textStyle="bold"/>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/editTextUpdateRc"
                        android:layout_width="80sp"
                        android:layout_height="wrap_content"
                        android:layout_margin="10sp"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/rcFineFirst"
                        android:layout_width="60sp"
                        android:layout_height="wrap_content"
                        android:layout_margin="10sp"
                        android:textSize="15sp" />
                    <EditText
                        android:id="@+id/rcFineSecond"
                        android:layout_width="60sp"
                        android:layout_height="wrap_content"
                        android:layout_margin="10sp"
                        android:textSize="15sp"/>
                    <EditText
                        android:id="@+id/rcFineThird"
                        android:layout_width="65sp"
                        android:layout_height="wrap_content"
                        android:layout_margin="10sp"
                        android:textSize="15sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/editTextUpdateHelmet"
                        android:layout_width="80sp"
                        android:layout_height="wrap_content"

                        android:layout_margin="10sp"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/helmetFineFirst"
                        android:layout_width="60sp"
                        android:layout_height="wrap_content"
                        android:layout_margin="10sp"
                        android:textSize="15sp" />
                    <EditText
                        android:id="@+id/helmetFineSecond"
                        android:layout_width="60sp"
                        android:layout_height="wrap_content"
                        android:layout_margin="10sp"
                        android:textSize="15sp"/>
                    <EditText
                        android:id="@+id/helmetFineThird"
                        android:layout_width="65sp"
                        android:layout_height="wrap_content"
                        android:layout_margin="10sp"
                        android:textSize="15sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/editTextUpdatePollution"
                        android:layout_width="80sp"
                        android:layout_height="wrap_content"

                        android:layout_margin="10sp"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/pollutionFineFirst"
                        android:layout_width="60sp"
                        android:layout_height="wrap_content"
                        android:layout_margin="10sp"
                        android:textSize="15sp" />
                    <EditText
                        android:id="@+id/pollutionFineSecond"
                        android:layout_width="60sp"
                        android:layout_height="wrap_content"
                        android:layout_margin="10sp"
                        android:textSize="15sp"/>
                    <EditText
                        android:id="@+id/pollutionFineThird"
                        android:layout_width="65sp"
                        android:layout_height="wrap_content"
                        android:layout_margin="10sp"
                        android:textSize="15sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/editTextUpdateLicence"
                        android:layout_width="80sp"
                        android:layout_height="wrap_content"

                        android:layout_margin="10sp"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/licenceFineFirst"
                        android:layout_width="60sp"
                        android:layout_height="wrap_content"
                        android:layout_margin="10sp"
                        android:textSize="15sp" />
                    <EditText
                        android:id="@+id/licenceFineSecond"
                        android:layout_width="60sp"
                        android:layout_height="wrap_content"
                        android:layout_margin="10sp"
                        android:textSize="15sp"/>
                    <EditText
                        android:id="@+id/licenceFineThird"
                        android:layout_width="65sp"
                        android:layout_height="wrap_content"
                        android:layout_margin="10sp"
                        android:textSize="15sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/editTextUpdateInsurance"
                        android:layout_width="80sp"
                        android:layout_height="wrap_content"

                        android:layout_margin="10sp"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/insuranceFineFirst"
                        android:layout_width="60sp"
                        android:layout_height="wrap_content"
                        android:layout_margin="10sp"
                        android:textSize="15sp" />
                    <EditText
                        android:id="@+id/insuranceFineSecond"
                        android:layout_width="60sp"
                        android:layout_height="wrap_content"
                        android:layout_margin="10sp"
                        android:textSize="15sp"/>
                    <EditText
                        android:id="@+id/insuranceFineThird"
                        android:layout_width="65sp"
                        android:layout_height="wrap_content"
                        android:layout_margin="10sp"
                        android:textSize="15sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/editTextUpdateMissbehave"
                        android:layout_width="80sp"
                        android:layout_height="wrap_content"

                        android:layout_margin="10sp"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/missbehaveFineFirst"
                        android:layout_width="60sp"
                        android:layout_height="wrap_content"
                        android:layout_margin="10sp"
                        android:textSize="15sp" />
                    <EditText
                        android:id="@+id/missbehaveFineSecond"
                        android:layout_width="60sp"
                        android:layout_height="wrap_content"
                        android:layout_margin="10sp"
                        android:textSize="15sp"/>
                    <EditText
                        android:id="@+id/missbehaveFineThird"
                        android:layout_width="65sp"
                        android:layout_height="wrap_content"
                        android:layout_margin="10sp"
                        android:textSize="15sp" />
                </TableRow>

                <Button
                    android:id="@+id/buttonAddPolice"
                    style="?android:textAppearanceSmall"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20sp"
                    android:text="Update"
                    android:background="@drawable/form_button_background"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:onClick="addPolice"
                    android:textAllCaps="false"
                    android:textColor="#ffffff"
                    android:fontFamily="sans-serif"/>
            </LinearLayout>
        </ScrollView>

    </LinearLayout>
</LinearLayout>
